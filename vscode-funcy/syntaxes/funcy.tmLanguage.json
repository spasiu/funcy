{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Funcy",
  "scopeName": "source.funcy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#module-export" },
    { "include": "#variable-declaration" },
    { "include": "#event-subscription" },
    { "include": "#event-trigger" },
    { "include": "#await-operator" },
    { "include": "#function-definition" },
    { "include": "#keywords" },
    { "include": "#built-in-functions" },
    { "include": "#built-in-modules" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.funcy",
          "match": "//.*$"
        }
      ]
    },
    "module-export": {
      "patterns": [
        {
          "name": "meta.export.funcy",
          "match": "(#)([a-zA-Z_][a-zA-Z0-9_]*)(@)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.export.funcy" },
            "2": { "name": "entity.name.namespace.funcy" },
            "3": { "name": "keyword.operator.export.funcy" },
            "4": { "name": "entity.name.function.exported.funcy" }
          }
        }
      ]
    },
    "variable-declaration": {
      "patterns": [
        {
          "name": "meta.variable.funcy",
          "match": "(@)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.variable.funcy" },
            "2": { "name": "variable.other.funcy" }
          }
        }
      ]
    },
    "event-subscription": {
      "patterns": [
        {
          "name": "meta.event.subscription.funcy",
          "match": "(%)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.event.funcy" },
            "2": { "name": "entity.name.event.funcy" }
          }
        }
      ]
    },
    "event-trigger": {
      "patterns": [
        {
          "name": "meta.event.trigger.funcy",
          "match": "(&)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.event.funcy" },
            "2": { "name": "entity.name.event.funcy" }
          }
        }
      ]
    },
    "await-operator": {
      "patterns": [
        {
          "name": "keyword.operator.await.funcy",
          "match": "\\$"
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "name": "meta.function.arrow.funcy",
          "match": "=>",
          "captures": {
            "0": { "name": "storage.type.function.arrow.funcy" }
          }
        },
        {
          "name": "keyword.operator.recursion.funcy",
          "match": "\\*(?=\\()"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.funcy",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "built-in-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.funcy",
          "match": "\\b(if|exists|log|throw|capture|import|length|at|append|map|filter|reduce)\\b"
        }
      ]
    },
    "built-in-modules": {
      "patterns": [
        {
          "name": "support.class.builtin.funcy",
          "match": "\\b(Array|Map|String|IO)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.funcy",
          "match": "(==|!=|<=|>=|<|>|=)"
        },
        {
          "name": "keyword.operator.arithmetic.funcy",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.member-access.funcy",
          "match": "\\."
        },
        {
          "name": "keyword.operator.type-annotation.funcy",
          "match": ":"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.funcy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.funcy",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        },
        {
          "name": "string.quoted.single.funcy",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.funcy",
              "match": "\\\\(n|t|r|\\\\|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.funcy",
          "match": "\\b-?[0-9]+\\.?[0-9]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "support.type.primitive.funcy",
          "match": "\\b(int|string|bool|array|map|func|any)\\b"
        }
      ]
    }
  }
}
